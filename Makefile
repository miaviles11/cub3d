# **************************************************************************** #
#                                   cub3D                                      #
# **************************************************************************** #

NAME        := cub3D
SRC_DIR     := src
INC_DIR     := include
OBJ_DIR     := obj

LIBFT_DIR   := libft
MLX_DIR     := minilibx-linux

CC          := cc
CFLAGS      := -Wall -Wextra -Werror \
               -I$(INC_DIR) -I$(LIBFT_DIR) -I$(MLX_DIR)

LIBFT       := $(LIBFT_DIR)/libft.a
MLX_LIB     := $(MLX_DIR)/libmlx_Linux.a

# Busca recursivamente todos los .c en src/
SRCS        := $(shell find $(SRC_DIR) -name "*.c")
OBJS        := $(patsubst $(SRC_DIR)/%.c,$(OBJ_DIR)/%.o,$(SRCS))

# ----------------------------------------------------------------------------- #
# Regla principal
# ----------------------------------------------------------------------------- #
all: $(NAME)

$(NAME): $(LIBFT) $(MLX_LIB) $(OBJ_DIR) $(OBJS)
	$(CC) $(CFLAGS) $(OBJS) $(LIBFT) $(MLX_LIB) -lX11 -lXext -lm -lz -o $(NAME)

# ----------------------------------------------------------------------------- #
# Compilar libft (incluye get_next_line y bonus)
# ----------------------------------------------------------------------------- #
$(LIBFT):
	@$(MAKE) -C $(LIBFT_DIR) bonus

# ----------------------------------------------------------------------------- #
# Compilar MiniLibX Linux
# ----------------------------------------------------------------------------- #
$(MLX_LIB):
	@$(MAKE) -C $(MLX_DIR)

# ----------------------------------------------------------------------------- #
# Crear carpeta de objetos
# ----------------------------------------------------------------------------- #
$(OBJ_DIR):
	@mkdir -p $(OBJ_DIR)

# ----------------------------------------------------------------------------- #
# Compilar cada .c a .o
# ----------------------------------------------------------------------------- #
$(OBJ_DIR)/%.o: $(SRC_DIR)/%.c | $(OBJ_DIR)
	@mkdir -p $$(dirname $@)
	$(CC) $(CFLAGS) -c $< -o $@

# ----------------------------------------------------------------------------- #
# Limpieza
# ----------------------------------------------------------------------------- #
clean:
	$(RM) $(OBJS)
	@$(MAKE) -C $(LIBFT_DIR) clean
	@$(MAKE) -C $(MLX_DIR) clean

fclean: clean
	$(RM) $(NAME)
	@$(MAKE) -C $(LIBFT_DIR) fclean

re: fclean all

# ----------------------------------------------------------------------------- #
# Phony
# ----------------------------------------------------------------------------- #
.PHONY: all clean fclean re
